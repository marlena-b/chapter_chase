<%= form_with url:  rate_user_book_path(user_book), method: :patch do |form| %>
<div class="text-center mt-2" style="text-shadow: 0px 0px 2px rgba(127, 124, 97, 0.54); font-size: 36px">
  <% user_book.rating.times do |i| %>
    <%= form.button "★", name: "rating", value: i + 1, style: "color: #FFD700;", class: 'rating_star' %>
  <% end %>
  <% (5 - user_book.rating).times do |i| %>
     <%= form.button "★", name: "rating", value: user_book.rating + i + 1, style: "color: white;", class: 'rating_star'%>
  <% end %>
</div>
<% end %>
