<div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative bg-white">
  <div class="col p-4 d-flex flex-column position-static">
    <strong class="d-inline-block mb-2 text-primary"><%= book.genre %></strong>
    <h3 class="mb-0 fancy-font"><%= book.title %></h3>
    <div class="mb-1 text-muted">by <%= book.author%>
    <br> <%= book.average_rating %></div>
    <p class="card-text mb-auto"><%= book.description %></p>
    <%= link_to "", book, class: "stretched-link" %>
  </div>
  <div class="col-auto mt-4 d-none d-lg-block">
  <% if book.image.attached? %>
  <%= image_tag(book.image, width:"150", height:"160") %>
   <% else %>
  <%= image_tag("book-empty-cover.png", width:"150", height:"160") %>
  <% end %>
  </div>
</div>
