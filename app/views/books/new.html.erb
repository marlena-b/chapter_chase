<% provide(:button_text, 'Create my account') %>

<div class="row mb-2 justify-content-center">
  <div class="col-md-6">
    <h1>Add book</h1>
    <div class="border rounded bg-white p-4">
    <%= form_with(model: @book) do |f| %>
      <div class="mb-3">
       <%= f.label :title %>
       <%= f.text_field :title, class: 'form-control'%>
      </div>
      <div class="mb-3">
        <%= f.label :author %>
        <%= f.text_field :author, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <label for="bookFormCover" class="form-label">Add cover</label>
        <input class="form-control" type="file" id="bookFormCover">
      </div>
      <div class="mb-3">
         <%= f.label :genre %>
        <%= f.text_field :genre, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= f.label :isbn %>
        <%= f.text_field :isbn, class: 'form-control' %>
      </div>
      <div class="mb-3">
         <%= f.label :isbn13 %>
        <%= f.text_field :isbn13, class: 'form-control' %>
      </div>
      <div class="mb-3">
         <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
       <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
    </form>
    </div>
  </div>
</div>
